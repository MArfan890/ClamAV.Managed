<Window x:Class="ClamAV.Managed.Samples.AsyncGui.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Virus Scanner" Height="399" Width="320"
        Loaded="MainWindow_OnLoaded">
    <Grid>
        <TextBox x:Name="PathBox" Height="20" Margin="10,31,90,0" TextWrapping="Wrap" VerticalAlignment="Top"/>
        <Button x:Name="ScanButton" Content="Scan" Margin="0,31,10,0" VerticalAlignment="Top" Height="20" HorizontalAlignment="Right" Width="75" Click="ScanButton_Click"/>
        <TextBox x:Name="ResultBox"  Margin="10,77,10,10" TextWrapping="Wrap" IsReadOnly="True" VerticalScrollBarVisibility="Visible"/>
        <Label Content="Log:" HorizontalAlignment="Left" Margin="10,56,0,0" VerticalAlignment="Top" Padding="0"/>
        <Label Content="Select a file or directory to scan:" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Padding="0"/>
    </Grid>
</Window>
